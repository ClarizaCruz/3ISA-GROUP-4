    <!-- Bootstrap -->
    <link href="/CSS/createDay.css" rel="stylesheet">
    <script src="/JS/create.js"></script>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark day-mode-body">
       <a class="navbar-brand" href="homeDay.html"><img src="/images/RFLOGO3.png" width="250px" height="60px"></a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
       </button>
    </nav>
      <br><br><br>
    <hr>

    <div class="sidebar"><br>
        <a class ="active" href="#"><i class="far fa-file" style="font-size:40px;color:white"></i><br>Create</a>
        <a href="viewDay.html"><i class="far fa-folder-open" style="font-size:40px;color:white"></i>Open</a>
        <a href="create.html"><i class="fas fa-adjust" style="font-size:40px;color:white"></i>Day Mode</a>
    </div>

  <div class="container bg-custom mt-5 pt-3">
		
		<br><h1>Create Reports</h1><hr>

    {{#if message}}
      <h4>{{message}}</h4>
    {{/if}}
			
		<div class="row1">
		  <div class="col-75">
			<div class="container">
			  <form action="/forms/create" method="POST"><br>

				<div class="row">
				  <div class="col-50">
					<label for="Date">Date</label>
					<input type="date" id="date" name="Date"></div>

          <div class="col-50">
					<label for="Week">Week</label>
					<input type="text" id="Week" name="Week" placeholder = "e.g. Week 1, Week 2" required></div>
        </div>

        <div class="row">
				  <div class="col-50">
					<label for="Sales Invoice No.">Sales Invoice No.</label>
					<input type="text" id="Invoice_No" name="Invoice_No" placeholder = "Enter Sales Invoice No." required></div>

          <div class="col-50">
					<label for="Tin">Tin</label>
					<input type="text" id="Tin" name="Tin" placeholder = "Enter Tin" required></div>
        </div>

        <div class="row">
				  <div class="col-50">
					<label for="Quantity">Quantity</label>
					<input type="text" id="Quantity" name="Quantity" placeholder = "Enter the Quantity" required></div>

          <div class="col-50">
					<label for="Unit Price">Unit Price</label>
					<input type="text" id="Unit_Price" name="Unit_Price" placeholder = "Enter the Unit Price" required></div>
        </div>

        <div class="row">
				  <div class="col-50">
					<label for="Calculation">Calculation</label>
					<input type="text" id="Calculation" name="Calculation" placeholder = "Enter the Calculation" required></div>

          <div class="col-50">
					<label for="Total Sale">Total Sale</label>
					<input type="number" id="Total_Sale" name="Total_Sale" placeholder = "Enter the Total Sale" required></div>
        </div>


				  </div>
          <div class="row">
				  <div class="col-50">
            <input type="submit" value="Save" class="btn1">
					</div>

          <div class="col-50">
            <input type="reset" value="Cancel" class="btn2">
					</div> 
          </div>
				


				</div>
			  </form>
			</div>
		  </div>

    

  </body>
</html>
